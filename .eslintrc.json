{
    "env": {
        "browser": true,
        "es2021": true,
        "jest/globals": true
    },
    "extends": [
        "standard"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint",
        "jest"
    ],
    "rules": {
      "sort-keys": "error",
      "sort-imports": [
        "error",
        {
          "memberSyntaxSortOrder": [
            "all",
            "multiple",
            "single",
            "none"
          ]
        }
      ]
    }
}
