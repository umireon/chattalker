{
  "env": {
    "browser": true,
    "es2021": true,
    "jest/globals": true
  },
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["svelte3", "@typescript-eslint", "jest"],
  "overrides": [
    {
      "files": ["*.svelte"],
      "processor": "svelte3/svelte3"
    }
  ],
  "rules": {
    "sort-keys": "error",
    "sort-imports": [
      "error",
      {
        "memberSyntaxSortOrder": ["all", "multiple", "single", "none"]
      }
    ]
  },
  "settings": {
    "svelte3/typescript": true
  }
}
